<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
<persistence-unit name="persistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.veisite.vegecom.model.audit.AuditLogLine</class>
        <class>com.veisite.vegecom.model.security.User</class>
        <class>com.veisite.vegecom.model.security.UserRole</class>
        <class>com.veisite.vegecom.model.Articulo</class>
        <class>com.veisite.vegecom.model.ArticuloEnReferencia</class>
        <class>com.veisite.vegecom.model.Cliente</class>
        <class>com.veisite.vegecom.model.FamiliaArticulo</class>
        <class>com.veisite.vegecom.model.Municipio</class>
        <class>com.veisite.vegecom.model.PrecioReferenciaCliente</class>
        <class>com.veisite.vegecom.model.PrecioReferenciaProveedor</class>
        <class>com.veisite.vegecom.model.PrecioReferenciaTercero</class>
        <class>com.veisite.vegecom.model.Proveedor</class>
        <class>com.veisite.vegecom.model.Provincia</class>
        <class>com.veisite.vegecom.model.Referencia</class>
        <class>com.veisite.vegecom.model.TerceroComercial</class>
        <class>com.veisite.vegecom.model.TipoIva</class>
        <class>com.veisite.vegecom.model.TramoTiposIva</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <!-- value="create" to build a new database on each run; value="update" to modify an existing database; value="create-drop" means the same as "create" but also drops tables when Hibernate closes; value="validate" makes no changes to the database -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy"/>
            <property name="hibernate.connection.charSet" value="UTF-8"/>
            <property name="hibernate.show_sql" value = "true" />
            <!-- Uncomment the following two properties for JBoss only -->
            <!-- property name="hibernate.validator.apply_to_ddl" value="false" /-->
            <!-- property name="hibernate.validator.autoregister_listeners" value="false" /-->
        </properties>
    </persistence-unit>
</persistence>
