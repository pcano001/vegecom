<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc" 
       xmlns:context="http://www.springframework.org/schema/context" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       		http://www.springframework.org/schema/mvc 
       		http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
       		http://www.springframework.org/schema/context 
       		http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="com.veisite.vegecom.server.controller"/>
		 
	<mvc:resources mapping="/resources/**" location="/resources/"/>

	<mvc:annotation-driven/>

    <mvc:interceptors>
        <bean id="localeChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
            <property name="paramName" value="lang"/>
        </bean>
    </mvc:interceptors>
    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.AcceptHeaderLocaleResolver"/>

	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename">
			<value>i18n.server.messages</value>
		</property>
	</bean>

	<!-- permitir excepcion por anotaciones -->
    <bean id="annotationMethodHandlerExceptionResolver"
          class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerExceptionResolver">
        <property name="order" value="0"/>
    </bean>
    <bean id="serializationService" class="com.veisite.vegecom.service.impl.JsonSerializationService"/>
    <bean id="restExceptionResolver" class="com.veisite.vegecom.rest.error.RestExceptionHandler">
        <property name="order" value="100"/>
        <property name="serializationService" ref="serializationService"/>
        <property name="errorResolver">
            <bean class="com.veisite.vegecom.rest.error.DefaultRestErrorResolver">
                <property name="localeResolver" ref="localeResolver"/>
                <property name="defaultMoreInfoUrl" value="mailto:support@veisite.com"/>
                <property name="exceptionMappingDefinitions">
                    <map>
                        <!-- 404 -->
                        <entry key="com.veisite.vegecom.model.exception.ResourceNotFoundException" 
                        		value="status=404, code=10010, msg=error.ResourceNotFoundException, 
                        		devMsg=error.ResourceNotFoundException_dev"/>
                        <!-- 400 -->
                        <entry key="com.veisite.vegecom.model.exception.NewResourceWithExplicitIdException" 
                        		value="status=400, code=10015, msg=error.ExplicitIdInvalid, 
                        		devMsg=error.ExplicitIdInvalid_dev"/>
                        <entry key="com.veisite.vegecom.model.exception.InvalidResourceParameterException" 
                        		value="status=400, code=10020, msg=error.InvalidParameter, 
                        		devMsg=error.InvalidParameter_dev"/>
                        <!-- 409 CONFLICT -->
                        <entry key="org.springframework.orm.jpa.JpaOptimisticLockingFailureException" 
                        		value="status=409, code=10025, msg=error.OptimisticLockException, 
                        		devMsg=error.OptimisticLockException_dev"/>

                        <!-- 500 (catch all): -->
                        <entry key="Throwable" value="status=500, code=500, msg=error.internal"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

</beans>